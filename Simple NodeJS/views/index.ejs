<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Todo List</title>
  <style>
    body { font-family: sans-serif; background: #f9f9f9; padding: 2em; }
    h1 { margin-bottom: 1em; }
    form { display: flex; gap: 0.5em; margin-bottom: 1em; }
    input { flex: 1; padding: 0.5em; }
    button { padding: 0.5em 1em; }
    ul { list-style: none; padding: 0; }
    li {
      background: #fff;
      margin-bottom: 0.5em;
      padding: 0.5em;
      display: flex;
      justify-content: space-between;
      border: 1px solid #ddd;
      align-items: center;
    }
    .task-info { display: flex; flex-direction: column; }
    .timestamp { font-size: 0.8em; color: #666; }
    a { color: red; text-decoration: none; }
  </style>
</head>
<body>
  <h1>üìù My Todo List</h1>
  <form action="/add" method="POST">
    <input name="todo" placeholder="Add task" required />
    <button>Add</button>
  </form>
  <ul>
    <% todos.forEach(t => { %>
      <li>
        <div class="task-info">
          <%= t.task %>
          <span class="timestamp"><%= new Date(t.created_at).toLocaleString() %></span>
        </div>
        <a href="/delete/<%= t._id %>">Delete</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
